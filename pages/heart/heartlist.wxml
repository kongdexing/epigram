<view class="container">

  <scroll-view scroll-top="{{scrollTop}}" scroll-y="true"
  bindscroll="scrollV" bindscrolltolower="pullUpLoad" bindscrolltoupper="refresh">

    <view style='width:100%;marginTop:20px;' wx:for="{{epigramList}}" wx:key="epItme" style='background:{{item.color}}'>
      <text style='color:white;font-size:16px;'>{{item.say}}</text>
    </view>
    
  </scroll-view>

  <!-- 显示加载更多 -->
  <view>
    <loading hidden="{{loadingHidden}}" bindchange="{{loadingChange}}">加载中...</loading>
  </view>

</view>