<view class="container">
  <view class="feed-item" style='background:{{epigram.color}}'>
    <view class="feed-source">
      <a>
        <view class="avatar">
          <image src="{{epigram.avatarUrl}}"></image>
        </view>
        <text>{{epigram.nickName}}</text>
      </a>
      <text class="item-more">{{epigram.createdAt}}</text>
    </view>
    <view class="feed-content">
      <view class="answer-body">
        <view bindtap="bindItemTap">
          <text class="answer-txt" aid="{{answer_id}}">{{epigram.say}}</text>
        </view>
        <view class="answer-actions" bindtap="bindItemTap">
          <view class="like" bindtap='onGoodClick'>
            <a>{{epigram.good}} 👍</a>
          </view>
          <view class="follow-it" bindtap='onShareClick'>
             分享
          </view>
        </view>
      </view>
    </view>
  </view>

</view>