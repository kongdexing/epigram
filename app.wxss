/**app.wxss**/
@import 'weui.wxss';

.container {
  height: 100%;
  flex-direction: column;
  align-items: left;
  /* justify-content: space-between; */
  padding: 0 0;
  box-sizing: border-box;
}

.container .feed-item{
  width: 96%;
  padding: 20rpx 10rpx;
  margin: 7rpx 0 6rpx 6rpx;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}
.container .feed-item .feed-source{
  width: 690rpx;
  left: 0;
  height: 70rpx;
}
.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  margin-right: 5rpx;
  top: 5rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  vertical-align: middle;
  margin: 0 0 0 12rpx;
  color: #ffffff;
  font-size: 26rpx;
}
.container .feed-item .feed-source .item-more{
  float:right; 
  margin-top: 15rpx;
}
.container .feed-item .feed-content{
  padding: 10rpx 0 0 0;
}

.container .feed-item .feed-content .answer-body{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 32rpx;
  line-height: 32rpx;
  color: #5b5b5b;
}

.container .feed-item .feed-content .answer-body .answer-txt{
  font-size: 35rpx;
  font-weight: 6px;
  color: #ffffff;
  letter-spacing: 5rpx;
  display: -webkit-box; 
  line-height: 43rpx; 
}

.container .feed-item .feed-content .answer-body .answer-txt-list{
  font-size: 35rpx;
  font-weight: 6px;
  color: #ffffff;
  letter-spacing: 4rpx;
  display: -webkit-box; 
  line-height: 42rpx; 
  word-break: break-all; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:5; 
  overflow: hidden; 
  text-overflow:ellipsis;
}

.container .feed-item .feed-content .answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  margin-top: 10rpx;
  color: white;
  display: block;
}

.container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
  
}
.container .feed-item .feed-content .answer-actions .dot ::after{
  content: "â€¢";
}

.container .feed-item .feed-content .answer-body .say-text{
  font-size: 35rpx;
  font-weight: 6px;
  color: #ffffff;
  letter-spacing: 2rpx;
  min-height: 600rpx;
}
.follow-it{
  float: right;
  size: 32pt;
}

.like{
  width: 20%;
  height: 20%;
  margin-left: 20rpx;
}